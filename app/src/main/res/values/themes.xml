<resources>
    <!-- Base application theme. -->
    <style name="theme_ppp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ppp_bar</item>
        <item name="colorPrimaryVariant">@color/ppp_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ppp_bar</item>
        <item name="colorSecondaryVariant">@color/ppp_bar</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="app_theme_color">@color/ppp_bar</item>
        <item name="app_text_color">@color/ppp_text</item>
        <item name="app_background_color">@color/ppp_background</item>
        <item name="card_bar_color">@color/ppp_card_bar</item>
        <item name="card_background_color">@color/ppp_card_background</item>
        <item name="date_text_color">@color/ppp_date_text</item>
        <item name="android:alertDialogTheme">@style/alert_dialog</item>
        <item name="alertDialogTheme">@style/alert_dialog</item>
    </style>
    <!-- theme_r -->
    <style name="theme_r" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/r_bar</item>
        <item name="colorPrimaryVariant">@color/r_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/r_bar</item>
        <item name="colorSecondaryVariant">@color/r_bar</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="app_theme_color">@color/r_bar</item>
        <item name="app_text_color">@color/r_text</item>
        <item name="app_background_color">@color/r_background</item>
        <item name="card_bar_color">@color/r_card_bar</item>
        <item name="card_background_color">@color/r_card_background</item>
        <item name="date_text_color">@color/r_date_text</item>
        <item name="alertDialogTheme">@style/alert_dialog</item>
    </style>
    <!-- alert_dialog -->
    <style name="alert_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/round_edge</item>
        <item name="buttonBarButtonStyle">@style/alert_button</item>
    </style>
    <style name="alert_button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>